{% extends 'base.html.twig' %}

{% block body %}
    {% include 'AdminBundle::menu.html.twig' %}
    Posts
    {% for post in posts %}
        <li>Name - {{ post.name }}</li>
        <li>Date post - {{ post.postDate | date() }}</li>
        <li>Author - {{ post.author.username }}</li>
        <li>Excerpt - {{ post.excerpt }}</li>
        <li>Content - {{ post.content }}</li>
        <li>Post type - {{ post.postType.name }}</li>
        <li>Taxonomy - {{ post.taxonomy.name }}</li>
        <li>Status - {{ post.postStatus.name }}</li>
        <li><a href="{{ path('admin_edit_post', {'id': post.id}) }}">Edit</a></li>
        <li><a href="{{ path('admin_delete_post', {'id': post.id}) }}">Delete</a></li>
    {% endfor %}
{% endblock %}